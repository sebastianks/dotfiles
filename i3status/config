general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "wireless wlan0"
order += "ethernet enp8s0"
order += "battery 0"
order += "cpu_temperature 0"
order += "disk /"
order += "memory"
order += "volume master"
order += "tztime local"

wireless wlan0 {
    format_up = "[W:%quality at %essid, %bitrate %ip]"
    format_down = "[W: down]"
    separator = false
    separator_block_width = 5
}

ethernet enp8s0 {
    format_up = "[E: %ip (%speed)]"
    format_down = "[E: down]"
    separator = false
    separator_block_width = 5
}

battery 0 {
    format = "[%status %percentage %remaining %emptytime]"
    format_down = "[No battery]"
    status_chr = "CHR"
    status_bat = "BAT"
    status_unk = "UNK"
    status_full = "FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
    separator = false
    separator_block_width = 5
    last_full_capacity = true
}

tztime local {
    format = "[%H:%M:%S %d-%m-%Y]"
    separator = false
    separator_block_width = 5
}

cpu_temperature 0 {
    format = "[T: %degrees Â°C]"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon8/temp1_input"
    separator = false
    separator_block_width = 5
}

memory {
    format = "[%used/%total]"
    threshold_degraded = "10%"
    format_degraded = "MEMORY: %free"
    separator = false
    separator_block_width = 5
}

disk "/" {
    format = "[%free]"
    separator = false
    separator_block_width = 5
}

read_file uptime {
    path = "/proc/uptime"
    separator = false
    separator_block_width = 5
}

volume master {
    format = "[%volume]"
    format_muted = "[muted]"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    separator = false
    separator_block_width = 5
}
